# TimeboardApp (Docker Compose)

# Host port to publish the app on.
PORT=8888

# Host directory for persistent data. This directory will contain settings.yml and the SQLite database.
CONFIG_DATA=./data

# Optional container name override.
CONTAINER_NAME=timeboardapp

# Optional external docker network name (Compose expects it to exist if networks.net_internal.external=true).
INTERNAL_NETWORK=net_internal

# Optional timezone and UID/GID mapping.
TZ=America/Denver
PUID=1000
PGID=1000
